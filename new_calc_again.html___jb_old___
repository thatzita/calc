<!DOCTYPE html>
<html lang="en">

<head>
  <title>calculator</title>
  <meta charset="utf-8" />
  <script src="https://cdn.jsdelivr.net/npm/vue@2.5.16/dist/vue.js"></script>
  <script>
    window.addEventListener("load", () => {
      let vm = new Vue({
        el: "#root",
        data: {
          currentNumber: 0,
          prevNumber: 0,
          result: 0,
          total: 0,
          disableSqrt: true,
          addTrue: false,
          subTrue: false,
          divTrue: false,
          multiTrue: false,
          squareRootTrue: false,
          squaredTrue: false,
          dot: false,
          history: [],
          target: this.target,
          startingZero: false,
        },
        methods: {
          movingNumbers: function() {
            this.prevNumber = parseFloat(this.result);
            this.result = parseFloat(this.prevNumber);
            this.total = parseFloat(this.result);
          },
          addition: function() {
            this.addTrue = true;
            this.dot = false;
            if (this.addTrue && this.currentNumber !== "") {
              if (this.subTrue == true) {
                this.subTrue = false;
                this.currentNumber = "-" + parseFloat(this.currentNumber);
                this.result = parseFloat(this.prevNumber) + parseFloat(this.currentNumber);
                this.movingNumbers();
              } else if (this.multiTrue) {
                this.multiTrue = false;
                this.result = this.prevNumber * parseFloat(this.currentNumber);
                this.movingNumbers();
              } else if (this.divTrue) {
                this.divTrue = false;
                this.result = this.prevNumber / parseFloat(this.currentNumber);
                this.movingNumbers();
              } else {
                this.result = this.prevNumber + parseFloat(this.currentNumber);
                this.movingNumbers();
              }
            }
            // else if (this.subTrue && this.currentNumber !== "") {
            //   console.log("here I am");
            //   this.result = this.prevNumber - this.currentNumber;
            //   this.movingNumbers();
            //   this.subTrue = false;
            //   this.currentNumber = "";
            // }
            else if (this.divTrue && this.result !== Infinity && this.currentNumber !== "") {
              this.result = this.prevNumber / this.currentNumber;
              this.movingNumbers();
              this.divTrue = false;
            }
            // else if (this.multiTrue && this.currentNumber !== "") {
            //   console.log("multiply not used?");
            //   this.result = this.prevNumber * this.currentNumber;
            //   this.movingNumbers();
            //   this.multiTrue = false;
            // }
            this.currentNumber = "";
          },
          sub: function(e) {
            this.dot = false;
            this.target = e.target.innerHTML;
            if (this.target == "-" && this.currentNumber == "-0") {
              this.currentNumber = this.target + parseFloat(this.currentNumber);
            }
            if (this.prevNumber == 0 && this.currentNumber == "") {
              this.subTrue = true;
              this.currentNumber = "-" + this.currentNumber;
            } else if (this.subTrue && this.currentNumber !== "") {
              this.subTrue = true;
              this.result = this.prevNumber - parseFloat(this.currentNumber);
              this.movingNumbers();
            } else if (this.addTrue && this.currentNumber !== "") {
              this.subTrue = true;
              this.result = this.prevNumber + parseFloat(this.currentNumber);
              this.movingNumbers();
              this.addTrue = false;
            } else if (this.divTrue && this.result !== Infinity && this.currentNumber !== "") {
              this.subTrue = true;
              this.result = this.prevNumber / this.currentNumber;
              this.movingNumbers();
              this.divTrue = false;
            } else if (this.multiTrue && this.currentNumber !== "") {
              this.subTrue = true;
              this.result = this.prevNumber * this.currentNumber;
              this.movingNumbers();
              this.multiTrue = false;
            } else if (this.subtrue && this.currentNumber !== "") {
              this.subTrue = true;
              if (this.currentNumber != "") {
                this.result = this.target + this.currentNumber;
                this.movingNumbers();
              }
            } else if (this.result == this.prevNumber) {
              this.subTrue = true;
              if (this.currentNumber != "") {
                this.result = this.currentNumber;
                this.movingNumbers();
              }
            }
            this.currentNumber = "";
          },
          divide: function() {
            this.divTrue = true;
            this.dot = false;
            if (this.prevNumber == 0 && this.currentNumber != "") {
              this.prevNumber = parseFloat(this.currentNumber);
              this.result = this.prevNumber;
              this.currentNumber = "";
            } else if (this.subTrue && this.currentNumber !== "") {
              this.result = this.prevNumber - this.currentNumber;
              this.movingNumbers();
              this.subTrue = false;
            } else if (this.addTrue && this.currentNumber !== "") {
              this.result = this.prevNumber + parseFloat(this.currentNumber);
              this.movingNumbers();
              this.addTrue = false;
            } else if (this.divTrue && this.result !== Infinity && this.currentNumber !== "") {
              if (this.multiTrue) {
                this.result = this.prevNumber * parseFloat(this.currentNumber);
                this.movingNumbers();
                this.multiTrue = false;
              } else {
                this.result = this.prevNumber / parseFloat(this.currentNumber);
                this.movingNumbers();
              }
            }
            // else if (this.multiTrue && this.currentNumber !== "") {
            //   console.log("1")
            //   this.result = this.prevNumber * parseFloat(this.currentNumber);
            //   this.movingNumbers();
            //   this.multiTrue = false;
            //   // this.currentNumber = "";
            // }
            else if (this.squareRootTrue && this.prevNumber > 0) {
              this.movingNumbers();
              this.squareRootTrue = false;
            }
            this.currentNumber = "";
          },
          multiply: function() {
            this.multiTrue = true;
            this.dot = false;
            if (this.multiTrue && this.currentNumber !== "" && this.prevNumber == 0 && this.subTrue) {
              this.prevNumber = -1;
              this.result = parseFloat(this.prevNumber) * parseFloat(this.currentNumber);
              this.movingNumbers();
              this.subTrue = false;
            } else if (this.multiTrue && this.currentNumber !== "" && this.prevNumber == 0) {
              this.prevNumber = 1;
              this.result = parseFloat(this.prevNumber) * parseFloat(this.currentNumber);
              this.movingNumbers();
            } else if (this.multiTrue && this.currentNumber !== "") {
              if (this.subTrue) {
                this.result = this.prevNumber - this.currentNumber;
                this.movingNumbers();
                this.subTrue = false;
              } else if (this.divTrue) {
                this.result = parseFloat(this.prevNumber) / parseFloat(this.currentNumber);
                this.movingNumbers();
                this.divTrue = false;
              } else if (this.addTrue) {
                console.log("here")
                this.result = parseFloat(this.prevNumber) + parseFloat(this.currentNumber);
                this.movingNumbers();
                this.addTrue = false;
              } else {
                this.result = parseFloat(this.prevNumber) * parseFloat(this.currentNumber);
                this.movingNumbers();
              }
            }
            // else if (this.addTrue && this.currentNumber !== "") {
            //   console.log("here")
            //   this.result = parseFloat(this.prevNumber) + parseFloat(this.currentNumber);
            //   this.movingNumbers();
            //   this.addTrue = false;
            // }
            // else if (this.divTrue && this.result != Infinity && this.currentNumber !== "") {
            //   this.result = this.prevNumber / this.currentNumber;
            //   this.movingNumbers();
            //   this.divTrue = false;
            //   console.log("while I wait")
            //   // this.currentNumber = "";
            // }
            //  else if (this.multiTrue && this.divTrue == true) {
            //   this.divTrue = false;
            //   this.result = this.prevNumber * this.currentNumber;
            //   this.movingNumbers();
            //   // this.currentNumber = "";
            // }
            // else if (this.result == this.prevNumber && this.currentNumber != "") {
            //   console.log("hejsan");
            //   this.result = this.prevNumber * this.currentNumber
            //   this.movingNumbers();
            //   this.currentNumber = "";
            // }
            this.currentNumber = "";
          },
          squareRoot: function() {
            this.squareRootTrue = true;
            this.dot = false;
            if (this.squareRootTrue && this.currentNumber != "") {
              console.log("squareRootTrue")
              this.result = Math.sqrt(this.currentNumber);
              this.prevNumber = this.prevNumber;
              this.history.push(this.result);
              this.squareRootTrue = false;
              this.subTrue = false;
              this.divTrue = false;
              this.multiTrue = false;
              this.squaredTrue = false;
            } else {
              this.result = Math.sqrt(this.result);
              this.squareRootTrue = false;
              this.subTrue = false;
              this.divTrue = false;
              this.multiTrue = false;
              this.squaredTrue = false;
            }
            // else if (this.currentNumber > 0 && this.subTrue) {
            //   console.log("log this brah")
            //   this.result = Math.sqrt(this.currentNumber);
            //   this.prevNumber = this.prevNumber;
            //   this.history.push(this.result);
            //   this.squareRootTrue = false;
            // } else if (this.currentNumber > 0 && this.addTrue) {
            //   console.log("log this brah")
            //   this.result = Math.sqrt(this.currentNumber);
            //   this.prevNumber = this.prevNumber;
            //   this.history.push(this.result);
            //   this.squareRootTrue = false;
            // } else if (this.currentNumber > 0 && this.divTrue) {
            //   console.log("log this brah")
            //   this.result = Math.sqrt(this.currentNumber);
            //   this.prevNumber = this.prevNumber;
            //   this.history.push(this.result);
            //   this.squareRootTrue = false;
            // } else if (this.currentNumber > 0 && this.multiTrue) {
            //   console.log("log this brah")
            //   this.result = Math.sqrt(this.currentNumber);
            //   this.prevNumber = this.prevNumber;
            //   this.history.push(this.result);
            //   this.squareRootTrue = false;
            // }
            // else if (this.result == undefined || this.total == 0) {
            //   this.result = Math.sqrt(parseFloat(this.currentNumber))
            //   this.movingNumbers();
            //   this.squareRootTrue = false;
            //   // this.currentNumber = "";
            //   this.history.push(this.result);
            // }
            // else {
            //   this.result = Math.sqrt(parseFloat(this.currentNumber))
            //   this.squareRootTrue = false;
            //   this.history.push(this.result);
            // }
            this.currentNumber = "";
          },
          squared: function() {
            this.squaredTrue = true;
            this.dot = false;
            // if (this.currentNumber > 0 || this.prevNumber == 0 && this.currentNumber > 0) {
            //   this.result = Math.pow(this.currentNumber, 2);
            //   this.prevNumber = this.currentNumber;
            //   this.movingNumbers();
            //   // this.total = this.result;
            //   // this.result = this.prevNumber;
            //   this.currentNumber = "";
            //   this.history.push(this.result);
            //   this.squaredTrue = false;
            //   console.log("hejsan")
            // } else
            if (this.result == 0) {
              this.result = Math.pow(this.currentNumber, 2);
              // this.prevNumber = this.result;
              this.movingNumbers();
              this.history.push(this.result);
              this.squaredTrue = false;
              console.log("hejsan")
              this.currentNumber = "";
            }
            // else if (this.result > 0) {
            //   this.result = Math.pow(this.result, 2);
            //   // this.prevNumber = this.result;
            //   this.movingNumbers();
            //   this.history.push(this.result);
            //   this.squaredTrue = false;
            //   console.log("hejsan")
            //   // this.currentNumber = "";
            // }
            else if (this.currentNumber > 0 && this.multiTrue ||
              this.currentNumber > 0 && this.subTrue || this.currentNumber > 0 && this.addTrue || this.currentNumber > 0 && this.divTrue) {

              console.log("tjenarwe")
              this.result = Math.pow(this.currentNumber, 2);

              this.prevNumber = this.currentNumber;
              // this.movingNumbers();
              this.history.push(this.result);
              // this.squaredTrue = false;
              this.subTrue = false;
              this.divTrue = false;
              this.multiTrue = false;
              this.squaredTrue = false;
              this.currentNumber = "";
            }
          },
          theResult: function() {
            if (this.addTrue) {
              this.subTrue = false;
              this.divTrue = false;
              this.multiTrue = false;
              this.squaredTrue = false;
              if (this.squareRootTrue) {
                console.log(1)
                this.result = parseFloat(this.prevNumber) + parseFloat(this.currentNumber);
                this.squareRootTrue = false;
                this.addTrue = false;
                this.movingNumbers();
                this.history.push(this.result);
              } else {
                this.result = parseFloat(this.prevNumber) + parseFloat(this.currentNumber);
                this.movingNumbers();
                this.addTrue = false;
                this.history.push(this.result);
              }
              this.currentNumber = "";
            } else if (this.subTrue) {
              this.addTrue = false;
              this.divTrue = false;
              this.multiTrue = false;
              this.squaredTrue = false;
              if (this.squareRootTrue) {
                this.result = parseFloat(this.prevNumber) - this.prevNumber;
                this.squareRootTrue = false;
                this.subTrue = false;
                this.movingNumbers();
                this.history.push(this.result);
              } else {
                this.result = this.prevNumber - this.currentNumber;
                this.movingNumbers();
                this.subTrue = false;
                this.currentNumber = "";
                this.history.push(this.result);
              }
            } else if (this.divTrue) {
              this.addTrue = false;
              this.subTrue = false;
              this.multiTrue = false;
              this.squaredTrue = false;
              if (this.squareRootTrue) {
                this.result = parseFloat(this.prevNumber) / this.prevNumber;
                this.squareRootTrue = false;
                this.divTrue = false;
                this.movingNumbers();
                this.history.push(this.result);
              } else if (this.currentNumber == 0 || this.currentNumber == "") {
                console.log("can't divide by zero");
                this.divTrue = false;
              } else {
                this.result = this.prevNumber / this.currentNumber;
                this.movingNumbers();
                this.divTrue = false;
                this.currentNumber = "";
                this.history.push(this.result);
              }
            } else if (this.multiTrue) {
              this.addTrue = false;
              this.subTrue = false;
              this.divTrue = false;

              if (this.squareRootTrue) {
                this.result = parseFloat(this.prevNumber) * this.prevNumber;
                this.squareRootTrue = false;
                this.multiTrue = false;
                this.movingNumbers();
                this.history.push(this.result);
              } else if (this.squaredTrue) {
                // this.result = Math.pow(this.currentNumber, 2);

                this.result = this.total * this.result;
                this.movingNumbers();
                this.multiTrue = false;
                this.squaredTrue = false;
                console.log("trying this again")

              } else {
                this.result = this.prevNumber * this.currentNumber;
                this.movingNumbers();
                this.multiTrue = false;
                this.currentNumber = "";
                this.history.push(this.result);
                console.log("trying this again")
              }
            } else if (this.squareRootTrue && this.prevNumber > 0) {
              this.result = Math.sqrt(this.prevNumber);
              this.movingNumbers();
              this.squareRootTrue = false;
              this.currentNumber = "";
              this.history.push(this.result);
              console.log("trying this again")
            }

          },
          clear: function() {
            this.dot = false;
            this.prevNumber = 0;
            this.total = 0;
            this.currentNumber = 0;
            this.result = 0;
            this.addTrue = false;
            this.subTrue = false;
            this.divTrue = false;
            this.multiTrue = false;
            this.squareRootTrue = false;
            this.squaredTrue = false;
          },
          addNr: function(e) {
            if (e.target.innerHTML == ".") {
              this.startingZero = true;
              this.dot = true;
              this.currentNumber = this.currentNumber + e.target.innerHTML;
            } else if (this.currentNumber == 0 && this.prevNumber == 0 && this.result == 0) {
              if (this.startingZero) {
                this.currentNumber = this.currentNumber + e.target.innerHTML
                this.startingZero = false;
              } else {
                this.currentNumber = parseFloat(e.target.innerHTML);
              }
            } else if (this.currentNumber == -0) {
              if (this.startingZero) {
                this.currentNumber = this.currentNumber + e.target.innerHTML
                this.startingZero = false;
              } else {
                this.currentNumber = parseFloat(e.target.innerHTML);
              }
            } else {
              this.currentNumber = this.currentNumber + "" + parseFloat(e.target.innerHTML);
            }
          }
        }
      })
    })
  </script>
